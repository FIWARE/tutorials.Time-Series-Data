     ]
   },
   {
      "device_id": "water001",
      "entity_name": "urn:ngsi-ld:Device:water001",
      "entity_type": "Water",
      "endpoint": "http://context-provider:3001/iot/water001",
      "static_attributes": [
        {"name": "controllingAsset", "type": "Relationship","value": "urn:ngsi-ld:Building:farm001"}
